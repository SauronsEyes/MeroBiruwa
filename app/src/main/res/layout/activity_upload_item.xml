<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadItem">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sell"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#297716"/>
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/sell"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout7"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="What you're looking to Sell"
            android:inputType="textPersonName"
            android:padding="10dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout8"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/itemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Set your Price"
            android:inputType="textPersonName"
            android:padding="10dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout9"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Description about your product"
            android:inputType="textPersonName"
            android:padding="10dp" />

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:paddingLeft="30dp"
        android:layout_marginTop="15dp"
        android:paddingRight = "20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo:"/>
        <ImageView
            android:id="@+id/uploadCam"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#297716"
            app:srcCompat="@drawable/camera"/>
        <ImageView
            android:id="@+id/uploadFile"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="#297716"
            app:srcCompat="@drawable/upload"/>
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:id="@+id/itempic"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Sell"
            android:id="@+id/uploadItem"
            android:background="@drawable/leafbtn"
            android:textColor="#ffff"
            android:paddingBottom="10dp"/>
    </LinearLayout>

</LinearLayout>